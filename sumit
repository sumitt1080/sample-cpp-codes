#include <iostream>
using namespace std;


void merge(int * arr, int left,int middle, int right){
    int size1=middle-left+1;
    int temp1[size1];
    int size2=right-middle;
    int temp2[size2];
    
    for(int i=left;i<=middle;i++)
    temp1[i-left]=arr[i];    
    for(int i=middle+1;i<=right;i++)
    temp2[i-middle-1]=arr[i];

    int i=0,j=0;
    while(i+j<=right-left)
        if(j>=size2)
            arr[left+j+i++]=temp1[i];
        else if(i>=size1)
            arr[left+i+j++]=temp2[j];
        else if(temp1[i]<=temp2[j])
            arr[left+j+i++]=temp1[i];
        else
            arr[left+i+j++]=temp2[j];
}

void mergeSort(int * arr,int left, int right){
    if(right>left){
        int middle=(left+right)/2;
        mergeSort(arr,left,middle);
        mergeSort(arr,middle+1,right);
        merge(arr,left,middle,right);
    }
}


int main() {
    int arr[250];
    for(int i=0;i<250;i++) arr[i]=rand()%201-100;
    mergeSort(arr, 0, 249);
    for(int i=0;i<250;i++) cout<<arr[i]<<" ";
    
    cout<<endl<<endl<<"How many numbers in your array?";
    int n;
    cin>>n;
    cout<<n<<endl;
    int arr2[n];
    int i=0;
    while(cin>>arr2[i++]);
    mergeSort(arr2,0,n-1);
    for(int i=0;i<n;i++) cout<<arr2[i]<<" ";
    return 0;
}
